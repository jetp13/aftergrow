  <title>呼吸球 - Afterglow</title>

  <style>
    body {
      margin: 0;
      padding: 0;
      background: #050505;
      color: #fff;
      font-family: -apple-system, BlinkMacSystemFont, "PingFang TC", "Noto Sans", sans-serif;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      overflow: hidden;
      opacity: 0;
      animation: pageFadeIn 6s forwards;
    }

    @keyframes pageFadeIn {
      to { opacity: 1; }
    }

    @keyframes pageFadeOut {
      to { opacity: 0; }
    }

    .ball {
      width: 20vmin; /* 最小狀態約 20% */
      height: 20vmin;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(255,105,180,0.9), rgba(255,60,150,0.4), rgba(255,60,150,0.1));
      animation: breathing 8s infinite ease-in-out;
      filter: blur(4px);
      transition: opacity 4s ease-in-out; /* 結束淡出用 */
    }

    @keyframes breathing {
      0%   { transform: scale(0.20); }
      50%  { transform: scale(1.20); } /* 可以超框，呼吸飽滿 */
      100% { transform: scale(0.20); }
    }

    .controls {
      position: fixed;
      bottom: 8vh;
      display: flex;
      gap: 24px;
    }

    button {
      background: rgba(255,105,180,0.25);
      border: 1px solid rgba(255,105,180,0.6);
      padding: 12px 24px;
      border-radius: 8px;
      font-size: 16px;
      color: #fff;
      backdrop-filter: blur(6px);
      cursor: pointer;
    }

    button:hover {
      background: rgba(255,105,180,0.45);
    }

    .back-home {
      position: fixed;
      top: 20px;
      right: 20px;
      font-size: 14px;
      color: rgba(255,255,255,0.6);
      text-decoration: none;
    }
  </style>
