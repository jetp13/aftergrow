<body>

  <a href="../Home.html" class="back-home">返回首頁</a>

  <div class="ball" id="ball"></div>

  <div class="controls">
    <button id="startBtn">開始</button>
    <button id="stopBtn">結束</button>
  </div>

  <!-- 聲音檔案（可換成你要的） -->
  <audio id="bgAudio" src="../assets/audio/fire.mp3" preload="auto"></audio>

  <script>
    const audio = document.getElementById("bgAudio");
    const ball = document.getElementById("ball");
    const startBtn = document.getElementById("startBtn");
    const stopBtn = document.getElementById("stopBtn");

    // 手動啟動，符合手機自動播放政策
    startBtn.addEventListener("click", () => {
      audio.volume = 0;
      audio.loop = true;
      audio.play();
      fadeAudioIn();
    });

    stopBtn.addEventListener("click", () => {
      fadeAudioOut();
      document.body.style.animation = "pageFadeOut 4s forwards";
      ball.style.opacity = 0;
      setTimeout(() => {
        window.location.href = "../Home.html";
      }, 4000);
    });

    function fadeAudioIn() {
      let v = 0;
      const fadeIn = setInterval(() => {
        if (v < 0.35) { v += 0.01; audio.volume = v; }
        else { clearInterval(fadeIn); }
      }, 120);
    }

    function fadeAudioOut() {
      let v = audio.volume;
      const fadeOut = setInterval(() => {
        if (v > 0) { v -= 0.02; audio.volume = v; }
        else { audio.pause(); clearInterval(fadeOut); }
      }, 120);
    }
  </script>

</body>
</html>

